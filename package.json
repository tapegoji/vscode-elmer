{
  "name": "vscode-elmer",
  "displayName": "Elmer",
  "description": "Elmer FEM Solver Input File (.sif) language support for Visual Studio Code",
  "version": "0.2.0",
  "publisher": "elmer-community",
  "license": "MIT",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "elmer",
    "elmerfem",
    "sif",
    "fem",
    "finite element",
    "simulation"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/vscode-elmer.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/vscode-elmer/issues"
  },
  "homepage": "https://www.elmerfem.org/",
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:elmer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "elmer",
        "aliases": [
          "Elmer",
          "ElmerFEM",
          "SIF"
        ],
        "extensions": [
          ".sif"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "elmer",
        "scopeName": "source.sif",
        "path": "./syntaxes/elmer.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package --allow-missing-repository"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "^16.x",
    "typescript": "^5.0.0"
  }
}
